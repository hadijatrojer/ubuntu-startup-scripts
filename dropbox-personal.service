[Unit]
Description=Start personal Dropbox instance after login
After=graphical-session.target xdg-desktop-autostart.target network-online.target
Wants=network-online.target xdg-desktop-autostart.target
PartOf=graphical-session.target

[Service]
WorkingDirectory=%h
Environment=HOME=%h
ExecStart=%h/scripts/sync-personal-dropbox.sh

[Install]
WantedBy=graphical-session.target
